{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2018",
        "lib": ["es2018"],
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./lib",
        "rootDir": "./src"
    },

    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/webapp",
        "src/**/*.spec.ts",
        "node_modules"
    ]
}
